{
  "name": "dominservice/laravel-media-kit",
  "description": "Lekki pipeline obrazów i wideo dla Laravela (shared hosting ready): warianty, AVIF/WebP, <picture>, eager/lazy generacja, narzędzia CLI.",
  "type": "library",
  "license": "MIT",
  "authors": [
    { "name": "Dominservice", "email": "biuro@dominservice.it", "role": "Developer"}
  ],
  "require": {
    "php": ">=8.1",
    "illuminate/support": "^9.0|^10.0|^11.0|^12.0",
    "illuminate/filesystem": "^9.0|^10.0|^11.0|^12.0",
    "illuminate/database": "^9.0|^10.0|^11.0|^12.0",
    "illuminate/view": "^9.0|^10.0|^11.0|^12.0",
    "illuminate/routing": "^9.0|^10.0|^11.0|^12.0",
    "rosell-dk/webp-convert": "^2.0"
  },
  "require-dev": {
    "orchestra/testbench": "^7.0|^8.0|^9.0"
  },
  "autoload": {
    "psr-4": {
      "Dominservice\\MediaKit\\": "src/",
      "Dominservice\\MediaKit\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Dominservice\\MediaKit\\MediaKitServiceProvider"
      ]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "suggest": {
    "ext-gd": "Przyspiesza przetwarzanie obrazów (opcjonalne).",
    "ext-imagick": "Lepsza jakość i wydajność (opcjonalne)."
  },
  "scripts": {
    "test": "vendor/bin/phpunit -c phpunit.xml.dist"
  }
}
